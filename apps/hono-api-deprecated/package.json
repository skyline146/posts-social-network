{
  "name": "hono-api",
  "version": "0.1.0",
  "type": "commonjs",
  "scripts": {
    "dev:tsx": "tsx watch src/app.ts",
    "dev:deprecated": "concurrently \"pnpm watch\" \"pnpm start\"",
    "watch": "swc src -d ./dist --watch",
    "start": "nodemon dist/src/app.js",
    "prod": "node dist/src/app.js",
    "build": "swc src -d dist",
    "format": "prettier -w '**/*.{ts,js}'"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@posts-app/database": "workspace:*",
    "@posts-app/zod": "workspace:*",
    "drizzle-orm": "^0.32.1",
    "hono": "^4.5.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.0",
    "@types/node": "^20.11.17",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.4",
    "tsx": "^4.7.1"
  }
}
